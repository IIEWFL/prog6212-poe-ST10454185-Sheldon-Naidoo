<Window x:Class="ContractMonthlyClaimSystem.Views.HRView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="HR Claim Processing View" 
        Height="800" Width="1200" 
        WindowStartupLocation="CenterScreen">


    <!-- Define simple styles to ensure the file compiles without external App.xaml dependencies -->
    <Window.Resources>
        <!-- Simple base style for navigation buttons -->
        <Style x:Key="SimpleNavButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Base style for the main action button (Used for inheritance) -->
        <Style x:Key="BaseActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Column for the claim list and search/filter -->
            <ColumnDefinition Width="400"/>
            <!-- Column for claim details and action buttons -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Header, back button, and filter -->
        <Grid Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title and Navigation -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="← Back to Main Menu" 
                        Command="{Binding GoHomeCommand}"
                        Style="{StaticResource SimpleNavButtonStyle}"/>
                <TextBlock Text="HR Payment Processing" 
                           FontSize="20" FontWeight="Bold" 
                           VerticalAlignment="Center" Margin="20,0,0,0"/>
            </StackPanel>

            <!-- Search and Filter Controls -->
            <StackPanel Grid.Row="1" Margin="0,0,0,10">
                <TextBlock Text="Search Claims (ClaimID, Month, Year):" FontWeight="SemiBold"/>
                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="5" Margin="0,5,0,10"/>

                <!-- Status Filter -->
                <TextBlock Text="Filter by Status:" FontWeight="SemiBold"/>
                <ComboBox SelectedValue="{Binding SelectedStatusId}" 
                          DisplayMemberPath="StatusName" 
                          SelectedValuePath="StatusID"
                          ItemsSource="{Binding AvailableStatuses}"
                          IsEditable="False"
                          Padding="5" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Claim List -->
            <DataGrid Grid.Row="2"
                      ItemsSource="{Binding FilteredClaims}"
                      SelectedItem="{Binding SelectedClaim}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ClaimID}" Width="Auto"/>
                    <DataGridTextColumn Header="Month" Binding="{Binding Month}" Width="Auto"/>
                    <DataGridTextColumn Header="Year" Binding="{Binding Year}" Width="Auto"/>
                    <DataGridTextColumn Header="Total" Binding="{Binding TotalAmount, StringFormat=C}" Width="*"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding StatusName}" Width="Auto"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Claim Details and Actions -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Detail Header -->
            <TextBlock Grid.Row="0" 
                       Text="{Binding SelectedClaim.ClaimID, StringFormat='Details for Claim #{0}'}" 
                       FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- Details Tabs (Hours and Documents) -->
            <TabControl Grid.Row="1">
                <TabItem Header="Hours Worked">
                    <DataGrid ItemsSource="{Binding ClaimHours}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding WorkDate, StringFormat='{}{0:d}'}" Width="*"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>
                            <DataGridTextColumn Header="Hours" Binding="{Binding Hours}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
                <TabItem Header="Supporting Documents">
                    <DataGrid ItemsSource="{Binding ClaimDocuments}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Document ID" Binding="{Binding DocumentID}" Width="Auto"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding DocumentType}" Width="*"/>
                            <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="2*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
            </TabControl>

            <!-- HR Automation Button -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <TextBlock Text="Total Payable: " 
                           FontSize="16" VerticalAlignment="Center" 
                           FontWeight="SemiBold" Margin="0,0,10,0"/>
                <TextBlock Text="{Binding SelectedClaim.TotalAmount, StringFormat=C}" 
                           FontSize="16" VerticalAlignment="Center" 
                           FontWeight="Bold" Foreground="DarkGreen" Margin="0,0,20,0"/>

                <Button Content="Process Payment / Complete Claim"
                        Command="{Binding ProcessPaymentCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource BaseActionButtonStyle}">
                            <Setter Property="Background" Value="#28A745"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedClaim.StatusID}" Value="5">
                                    <Setter Property="Content" Value="Payment Already Processed"/>
                                    <Setter Property="IsEnabled" Value="False"/>
                                    <Setter Property="Background" Value="Gray"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding SelectedClaim.StatusID}" Value="2">
                                    <Setter Property="Content" Value="Claim Rejected by Manager"/>
                                    <Setter Property="IsEnabled" Value="False"/>
                                    <Setter Property="Background" Value="OrangeRed"/>
                                </DataTrigger>
                                <!-- The button is enabled only for StatusID 4 (Approved) via CanExecute in ViewModel -->
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>