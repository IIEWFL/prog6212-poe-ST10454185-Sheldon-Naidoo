<Window x:Class="ContractMonthlyClaimSystem.Views.ClaimSubmission"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContractMonthlyClaimSystem.Views"
        mc:Ignorable="d"
        Title="Claim Submission" Height="600" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="New Monthly Claim" FontSize="20" FontWeight="Bold" Margin="0,0,0,15" HorizontalAlignment="Center"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Claim For Month:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox Grid.Column="1" Text="{Binding SelectedMonth}"/>
                    <TextBlock Grid.Column="2" Text="Year:" VerticalAlignment="Center" Margin="10,0,10,0"/>
                    <TextBox Grid.Column="3" Text="{Binding SelectedYear}"/>
                </Grid>

                <TextBlock Text="Hours Worked" FontWeight="Bold" Margin="0,15,0,5"/>
                <DataGrid Height="200" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Date" Width="*"/>
                        <DataGridTextColumn Header="Hours" Width="*"/>
                        <DataGridTextColumn Header="Description" Width="2*"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Button Content="Add Hour Entry" Command="{Binding AddHoursCommand}" HorizontalAlignment="Left" Margin="0,5,0,0"/>

                <TextBlock Text="Supporting Documents" FontWeight="Bold" Margin="0,15,0,5"/>
                <Button Content="Upload Documents" Command="{Binding UploadDocumentCommand}" HorizontalAlignment="Left" Margin="0,0,0,5"/>
                <ListBox ItemsSource="{Binding CurrentDocuments}" Height="100" DisplayMemberPath="FileName"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <TextBlock Text="{Binding TotalAmount, StringFormat='Total: {0:C}'}" VerticalAlignment="Center" Margin="0,0,20,0"/>
            <Button Content="Submit Claim" Command="{Binding SubmitClaimCommand}" Padding="10" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
