<Window x:Class="ContractMonthlyClaimSystem.Views.LecturerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ContractMonthlyClaimSystem.ViewModels"
        xmlns:local="clr-namespace:ContractMonthlyClaimSystem.ViewModels"

        mc:Ignorable="d"
        Title="Lecturer Dashboard" Height="700" Width="1000"
        FontFamily="Segoe UI">

    <Window.DataContext>
        <local:LecturerViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <!-- Primary Button (Submit button styles) -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="30,12"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Secondary Button (Hours Worked Log and Refresh button styles) -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#F2F2F2"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Padding" Value="15,7"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Upload Button (Styles) -->
        <Style x:Key="UploadButton" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- NEW: Back to Main Menu (Navigation button styles) -->
        <Style x:Key="HomeButton" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- NEW: Small Delete Button Style -->
        <Style x:Key="DeleteButton" TargetType="Button">
            <Setter Property="Background" Value="#E74C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="2,0"/>
        </Style>

        <!-- NEW: Style for GroupBox Headers -->
        <Style x:Key="StandardGroupBox" TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Grid for Title and Back Button -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="New Monthly Claim Submission" FontSize="30" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"/>

            <!-- NEW: Back to Main Menu Button -->
            <Button Content="← Back to Main Menu" 
                    HorizontalAlignment="Right" 
                    Command="{Binding GoHomeCommand}"
                    Style="{StaticResource HomeButton}"/>
        </Grid>

        <TabControl Grid.Row="1" BorderBrush="#DDDDDD" BorderThickness="1">

            <!-- TAB 1: SUBMIT NEW CLAIM -->

            <TabItem Header="Submit New Claim">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Total Amount Header -->
                    <Border Grid.Row="0" Background="#E8F8F5" BorderBrush="#82E0AA" BorderThickness="1" CornerRadius="5" Padding="20" Margin="0,0,0,25">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="Total Claim Amount: " FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,15,0" Foreground="#1E8449"/>
                            <TextBlock Text="{Binding TotalAmount, StringFormat='R {0:N2}'}" FontSize="32" FontWeight="ExtraBold" Foreground="#1E8449"/>
                        </StackPanel>
                    </Border>

                    <!-- Main Content Area -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- LEFT COLUMN: Input Form and Current Hours DataGrid -->
                        <StackPanel Grid.Column="0">

                            <!-- Claim Period Selection -->
                            <GroupBox Header="Claim Period" FontWeight="Bold" Margin="0,0,0,15" Style="{StaticResource StandardGroupBox}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <TextBlock Text="Month" Margin="0,0,0,5"/>
                                        <!-- BINDING: SelectedMonth property -->
                                        <ComboBox SelectedIndex="{Binding SelectedMonth, Mode=TwoWay}" Padding="5">
                                            <ComboBoxItem Content="January"/>
                                            <ComboBoxItem Content="February"/>
                                            <ComboBoxItem Content="March"/>
                                            <ComboBoxItem Content="April"/>
                                            <ComboBoxItem Content="May"/>
                                            <ComboBoxItem Content="June"/>
                                            <ComboBoxItem Content="July"/>
                                            <ComboBoxItem Content="August"/>
                                            <ComboBoxItem Content="September"/>
                                            <ComboBoxItem Content="October"/>
                                            <ComboBoxItem Content="November"/>
                                            <ComboBoxItem Content="December"/>
                                        </ComboBox>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Year" Margin="0,0,0,5"/>
                                        <!-- BINDING: SelectedYear property -->
                                        <TextBox Text="{Binding SelectedYear, UpdateSourceTrigger=PropertyChanged}" Padding="5"/>
                                    </StackPanel>
                                </Grid>
                            </GroupBox>

                            <!-- Add New Hour Entry Form -->
                            <GroupBox Header="Add New Hour Entry" FontWeight="Bold" Margin="0,0,0,15" Style="{StaticResource StandardGroupBox}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="Date Worked" Margin="0,0,0,5"/>
                                    <!-- BINDING: NewHourEntry.DateWorked -->
                                    <DatePicker Grid.Row="1" SelectedDate="{Binding NewHourEntry.DateWorked}" Margin="0,0,0,10"/>

                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                            <TextBlock Text="Hours (e.g., 8.0)" Margin="0,0,0,5"/>
                                            <!-- BINDING: NewHourEntry.Hours -->
                                            <TextBox Text="{Binding NewHourEntry.Hours, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Width="100" HorizontalAlignment="Left" Padding="5"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Description" Margin="0,0,0,5"/>
                                            <!-- BINDING: NewHourEntry.Description -->
                                            <TextBox Text="{Binding NewHourEntry.Description, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Padding="5"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- BINDING: AddHoursCommand -->
                                    <Button Grid.Row="3" Content="Add Entry to Log" Command="{Binding AddHoursCommand}" Style="{StaticResource SecondaryButton}" HorizontalAlignment="Right" Margin="0,15,0,0"/>
                                </Grid>
                            </GroupBox>

                            <!-- Hours Worked Log (DataGrid for all entries being submitted) -->
                            <GroupBox Header="Hours Log (Entries to Submit)" FontWeight="Bold" FontSize="16" Foreground="#333333" Style="{StaticResource StandardGroupBox}">
                                <DataGrid ItemsSource="{Binding CurrentHours}" 
                                          MinHeight="200" 
                                          AutoGenerateColumns="False" 
                                          CanUserAddRows="False" 
                                          Margin="0,0,0,10" 
                                          BorderBrush="#CCCCCC" 
                                          BorderThickness="1"
                                          HeadersVisibility="Column">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Date" Binding="{Binding DateWorked, StringFormat='yyyy-MM-dd'}" IsReadOnly="True" Width="*"/>
                                        <DataGridTextColumn Header="Hours" Binding="{Binding Hours}" Width="0.7*"/>
                                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>

                                        <!-- Column with Remove Button -->
                                        <DataGridTemplateColumn Header="Action" Width="Auto">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <!-- BINDING: RemoveHoursCommand -->
                                                    <Button Content="Remove" 
                                                            Command="{Binding DataContext.RemoveHoursCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource DeleteButton}"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </GroupBox>
                        </StackPanel>

                        <!-- RIGHT COLUMN: Supporting Documents -->
                        <GroupBox Grid.Column="2" Header="2. Supporting Documents" FontWeight="Bold" FontSize="16" Foreground="#333333" Style="{StaticResource StandardGroupBox}">
                            <StackPanel Margin="10">
                                <!-- BINDING: UploadDocumentCommand -->
                                <Button Content="Upload Document (PDF, DOCX, XLSX)" Command="{Binding UploadDocumentCommand}" Style="{StaticResource UploadButton}" HorizontalAlignment="Stretch" Margin="0,0,0,15"/>
                                <TextBlock Text="Uploaded Files (Max 5MB per file):" FontStyle="Italic" Margin="0,0,0,5" Foreground="#666666"/>
                                <!-- BINDING: CurrentDocuments -->
                                <ListBox ItemsSource="{Binding CurrentDocuments}" MinHeight="300" DisplayMemberPath="FileName" BorderBrush="#CCCCCC" BorderThickness="1"/>
                            </StackPanel>
                        </GroupBox>
                    </Grid>

                    <!-- Submit Button -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
                        <!-- BINDING: SubmitClaimCommand -->
                        <Button Content="Submit Claim" Command="{Binding SubmitClaimCommand}" Style="{StaticResource PrimaryButton}"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- TAB 2: CLAIM HISTORY & STATUS TRACKING -->
            <TabItem Header="Claim History &amp; Status Tracking">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,15">
                        <Button Content="Refresh Status" Command="{Binding LoadClaimsCommand}" Style="{StaticResource SecondaryButton}" Padding="15,7"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" ItemsSource="{Binding Claims}" IsReadOnly="True" AutoGenerateColumns="False" BorderBrush="#CCCCCC" BorderThickness="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Claim ID" Binding="{Binding ClaimID}" Width="Auto"/>
                            <DataGridTextColumn Header="Month" Binding="{Binding Month}" Width="0.7*"/>
                            <DataGridTextColumn Header="Year" Binding="{Binding Year}" Width="0.7*"/>
                            <DataGridTextColumn Header="Submission Date" Binding="{Binding SubmissionDate, StringFormat='{}{0:yyyy-MM-dd}'}" Width="1.5*"/>
                            <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount, StringFormat=C}" Width="1.5*"/>

                            <DataGridTextColumn Header="Status" Width="2*" Binding="{Binding StatusName}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Style.Triggers>
                                            <!-- Approved -->
                                            <DataTrigger Binding="{Binding StatusID}" Value="4">
                                                <Setter Property="Foreground" Value="#27AE60"/>
                                                <Setter Property="Text" Value="APPROVED"/>
                                            </DataTrigger>
                                            <!-- Rejected -->
                                            <DataTrigger Binding="{Binding StatusID}" Value="2">
                                                <Setter Property="Foreground" Value="#E74C3C"/>
                                                <Setter Property="Text" Value="REJECTED"/>
                                            </DataTrigger>
                                            <!-- In Review / Processed -->
                                            <DataTrigger Binding="{Binding StatusID}" Value="3">
                                                <Setter Property="Foreground" Value="#3498DB"/>
                                                <Setter Property="Text" Value="PROCESSED"/>
                                            </DataTrigger>
                                            <!-- Submitted / New -->
                                            <DataTrigger Binding="{Binding StatusID}" Value="1">
                                                <Setter Property="Foreground" Value="#F39C12"/>
                                                <Setter Property="Text" Value="SUBMITTED"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Binds to the StatusID (int) -->
                            <DataGridTextColumn Header="Status ID" Binding="{Binding StatusID}" Width="Auto" Visibility="Collapsed"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
